{
    "$schema": "https://cdn.jsdelivr.net/npm/pagescms/schemas/v1.json",
    "collections": [
      {
        "name": "newsletter",
        "label": "Newsletter",
        "folder": "newsletters",
        "create": true,
        "fields": [
          {
            "label": "Title",
            "name": "title",
            "widget": "string"
          },
          {
            "label": "Body",
            "name": "body",
            "widget": "markdown"
          },
          {
            "label": "Date",
            "name": "date",
            "widget": "datetime"
          }
        ]
      }
    ]
  }
  